@using Misuka.Infrastructure.MVC
@model Misuka.Web.Models.SliderModel
@{
    ViewBag.Title = this.LocalResources("PageTitle");
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


@using (Ajax.BeginForm("Edit", "Slider", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    OnBegin = "defaultResponse.beginHandler",
    OnSuccess = "SliderClient.OnSuccessed",
    OnFailure = "SliderClient.OnFailed",

}, "errorPanel", new { id = "SliderInformationForm" }))
{
  
            <div class="row">
                <div class=" col-xs-12 col-sm-3">
                    <div class="info-panel">
                    </div>
                </div>
            </div>
            <div class="row">
                @Html.HiddenFor(model => model.SliderId)
               <div class=" col-xs-12 col-sm-3">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "col-xs-12 ",@autofocus =""  })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class=" col-xs-12 col-sm-3">
                  @Html.LabelFor(model => model.ImageURL)
                  @Html.TextBoxFor(model => model.ImageURL, new { @class = "col-xs-12 " })
                  @Html.ValidationMessageFor(model => model.ImageURL)
                </div>

            </div>
          <div class="row">
            <div class=" col-xs-12 col-sm-6">
              @Html.LabelFor(model => model.Description)
              @Html.TextBoxFor(model => model.Description, new { @class = "col-xs-12 from" })
              @Html.ValidationMessageFor(model => model.Description)
            </div>
        

          </div>
  <div class="row padding-top-10">
    <div class=" col-xs-12">
      <button class="btn btn-primary btn-sm pull-left " type="submit">@Misuka.Web.Resources.Common.Save</button>

      <a class="btn btn-primary btn-sm pull-left" onclick="SliderClient.OnBack()">@Misuka.Web.Resources.Common.BackTo</a>
    </div>
    </div>
}

@section Scripts
{
  <script src="@Url.Content("~/Scripts/pages/Slider/slider.js")" type="text/javascript"></script>
}