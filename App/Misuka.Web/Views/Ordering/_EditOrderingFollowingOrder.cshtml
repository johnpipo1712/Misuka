@using Misuka.Infrastructure.MVC
@model Misuka.Web.Models.OrderingModel
@{
    ViewBag.Title = this.LocalResources("PageTitle");
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


@using (Ajax.BeginForm("EditOrderingFollowingUSD", "Ordering", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    OnBegin = "defaultResponse.beginHandler",
    OnSuccess = "OrderingUSDClient.OnSuccessed",
    OnFailure = "OrderingUSDClient.OnFailed",

}, "errorPanel", new {id = "OrderingUSDInformationForm"}))
{

    <div class="row">
        <div class="col-md-12">
            <div class="info-panel">
            </div>
        </div>
    </div>
    <div class="row">
        @Html.HiddenFor(model => model.OrderingId)
        <div class="col-md-12">
            @Html.LabelFor(model => model.TransportFee)
            @Html.TextBoxFor(model => model.TransportFee, new {@class = "col-xs-12 ", @autofocus = ""})
            @Html.ValidationMessageFor(model => model.TransportFee)
        </div>
        <div class="col-md-12">
            @Html.LabelFor(model => model.WeightFee)
            @Html.TextBoxFor(model => model.WeightFee, new {@class = "col-xs-12 "})
            @Html.ValidationMessageFor(model => model.WeightFee)
        </div>

    </div>

    <div class="row padding-top-10">
        <div class=" col-xs-12">
            <button class="btn btn-primary btn-sm pull-left " type="submit">@Misuka.Web.Resources.Common.Save</button>

            <a class="btn btn-primary btn-sm pull-left" onclick=" OrderingUSDClient.OnBack() ">@Misuka.Web.Resources.Common.BackTo</a>
        </div>
    </div>
}

