@{
  Layout = "~/Views/Shared/Admin/_LoginLayout.cshtml";
}

  <div>

    <h1 class="logo-name">MI+</h1>

  </div>
  <h3>Chào đón đến Misuka quản trị</h3>
      @using (Html.BeginForm("LogOn", "User",new { ReturnUrl = this.Request.Params["ReturnUrl"] }, FormMethod.Post, new { @class = "log-page" }))
      {
    <div class="form-group">
      <input class="form-control" placeholder="Tên đăng nhập" name="UserName" required="">
    </div>
      <div class="form-group">
          <input type="password" class="form-control"   name="Password" placeholder="Mật khẩu" required="">
      </div>
         <input type="hidden" id="Type" value="2" name="Type" >
            
    <button type="submit" class="btn btn-primary block full-width m-b">Đăng nhập</button>
    @*<a href="#"><small>Forgot password?</small></a>*@
    
  }