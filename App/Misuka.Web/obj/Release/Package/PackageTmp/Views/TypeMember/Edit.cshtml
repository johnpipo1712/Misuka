@using Misuka.Infrastructure.MVC
@model Misuka.Web.Models.TypeMemberModel
@{
    ViewBag.Title = this.LocalResources("PageTitle");
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


@using (Ajax.BeginForm("Edit", "TypeMember", new {}, new AjaxOptions
{
    HttpMethod = "Post",
    OnBegin = "defaultResponse.beginHandler",
    OnSuccess = "TypeMemberClient.OnSuccessed",
    OnFailure = "TypeMemberClient.OnFailed",

}, "errorPanel", new {id = "TypeMemberInformationForm"}))
{

    <div class="row">
        <div class=" col-xs-12 col-sm-3">
            <div class="info-panel">
            </div>
        </div>
    </div>
    <div class="row">
        @Html.HiddenFor(model => model.TypeMemberId)
        <div class=" col-xs-12 col-sm-3">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new {@class = "col-xs-12 ", @autofocus = ""})
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class=" col-xs-12 col-sm-3">
            @Html.LabelFor(model => model.PercentDownPayment)
            @Html.TextBoxFor(model => model.PercentDownPayment, new {@class = "col-xs-12 "})
            @Html.ValidationMessageFor(model => model.PercentDownPayment)
        </div>

    </div>
    <div class="row">
        <div class=" col-xs-12 col-sm-3">
            @Html.LabelFor(model => model.ScoresFrom)
            @Html.TextBoxFor(model => model.ScoresFrom, new {@class = "col-xs-12 from"})
            @Html.ValidationMessageFor(model => model.ScoresFrom)
        </div>
        <div class=" col-xs-12 col-sm-3">
            @Html.LabelFor(model => model.ScoresTo)
            @Html.TextBoxFor(model => model.ScoresTo, new {@class = "col-xs-12 "})
            @Html.ValidationMessageFor(model => model.ScoresTo)
        </div>

    </div>
    <div class="row padding-top-10">
        <div class=" col-xs-12">
            <button class="btn btn-primary btn-sm pull-left " type="submit">@Misuka.Web.Resources.Common.Save</button>

            <a class="btn btn-primary btn-sm pull-left" onclick=" TypeMemberClient.OnBack() ">@Misuka.Web.Resources.Common.BackTo</a>
        </div>
    </div>
}

@section Scripts
{
  <script src="@Url.Content("~/Scripts/pages/TypeMember/typemember.js")" type="text/javascript"></script>
}