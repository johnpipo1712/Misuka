<div class="modal fade c-content-login-form" id="signup-form" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content c-square">
      <div class="modal-header c-no-border">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <h3 class="c-font-24 c-font-sbold">Tạo tài khoản</h3>
        <p>
       Vui lòng điền đầy đủ thông tin
        </p>
         @using (Ajax.BeginForm("Register", "User", new { }, new AjaxOptions
         {
             HttpMethod = "Post",
             OnBegin = "defaultResponse.beginHandler",
             OnSuccess = "HomeClient.OnRegisterSuccessed",
             OnFailure = "HomeClient.OnRegisterFailed",

         }, "errorPanel", new { id = "RegisterForm" }))
         {
            
             <div class="form-group">
                 <label for="UserName" class="hide">Tên đăng nhâp</label>
                 <input type="text" class="form-control input-lg c-square" id="UserName" name="UserName" placeholder="Tên đăng nhâp" required>
             </div>
              <div class="form-group">
                 <label for="Password" class="hide">Mật khẩu</label>
                 <input type="password" class="form-control input-lg c-square" id="Password" name="Password" placeholder="Mật khẩu" required>
             </div>
             <div class="form-group">
                 <label for="FullName" class="hide">Tên đầy đủ</label>
                 <input type="text" class="form-control input-lg c-square" id="FullName" name="FullName" placeholder="Tên đầy đủ" required>
             </div>
              <div class="form-group">
                 <label for="Email" class="hide">Email</label>
                 <input type="email" class="form-control input-lg c-square" id="Email" name="Email" placeholder="Email" required>
             </div>
            @*
             <div class="form-group">
                 <label for="signup-fullname" class="hide">Nhập lại mật khẩu</label>
                 <input type="password" class="form-control input-lg c-square" id="signup-fullname" placeholder="Nhập lại mật khẩu">
             </div>*@
             <div class="form-group">
                 <button type="submit" class="btn c-theme-btn btn-md c-btn-uppercase c-btn-bold c-btn-square c-btn-login">Đăng ký</button>
                 <a href="javascript:;" class="c-btn-forgot" data-toggle="modal" data-target="#login-form" data-dismiss="modal">Quay về đăng nhập</a>
             </div>
         }
      </div>
    </div>
  </div>
</div>