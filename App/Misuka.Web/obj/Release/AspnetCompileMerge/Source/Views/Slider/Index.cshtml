@using Misuka.Infrastructure.MVC
@{
    ViewBag.Title = this.LocalResources("PageTitle");
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
 <div class="row margin-top-10 clearfix no-border">
      <div class=" col-xs-12">
        <button class="btn btn-primary btn-sm pull-left" onclick="SliderClient.OnAddNew()"><i class="fa fa-plus"></i>@Misuka.Web.Resources.Common.Add</button>
