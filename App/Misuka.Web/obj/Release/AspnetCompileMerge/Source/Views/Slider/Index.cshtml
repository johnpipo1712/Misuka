      </div>
    </div>

        <div class="row">
            <div class="col-xs-12 margin-top-10">
              <table id="SliderGrid"></table>
                <div id="pager"></div>
            </div>
        </div>

   
@section Scripts
{
<script src="@Url.Content("~/Scripts/pages/Slider/slider.js")" type="text/javascript"></script>
