@using Misuka.Infrastructure.MVC
@model Misuka.Web.Models.OrderingModel
@{
    Layout = null;
}

<div class="modal-header">
                <button type="button" class="close dimdiss" data-dimdiss="modal"><span aria-hidden="true">×</span><span class="sr-only">@Misuka.Web.Resources.Common.Close</span></button>
              <h4 class="modal-title">@Model.OrderingCode</h4>
              </div>
<div class="modal-body">
    @using (Ajax.BeginForm("EditOrderingFollowingDone", "Ordering", new {}, new AjaxOptions
    {
        HttpMethod = "Post",
        OnBegin = "defaultResponse.beginHandler",
        OnSuccess = "OrderingDoneClient.OnSuccessed",
        OnFailure = "OrderingDoneClient.OnFailed",

    }, "errorPanel", new {id = "OrderingDoneInformationForm"}))
    {

        <div class="row">
            <div class="col-md-12">
                <div class="info-panel">
                </div>
            </div>
        </div>
        <div class="row">
            @Html.HiddenFor(model => model.OrderingId)
            <div class=" col-md-12">
                @Html.LabelFor(model => model.TotalCustomFees)
                @Html.TextBoxFor(model => model.TotalCustomFees, new {@class = "col-xs-12 money", @autofocus = ""})
                @Html.ValidationMessageFor(model => model.TotalCustomFees)
            </div>
            <div class=" col-md-12">
                @Html.LabelFor(model => model.TotalDomesticCharges)
                @Html.TextBoxFor(model => model.TotalDomesticCharges, new {@class = "col-xs-12 money"})
                @Html.ValidationMessageFor(model => model.TotalDomesticCharges)
            </div>
            <div class=" col-md-12">
                @Html.LabelFor(model => model.TotalShipAbroad)
                @Html.TextBoxFor(model => model.TotalShipAbroad, new {@class = "col-xs-12 money"})
                @Html.ValidationMessageFor(model => model.TotalShipAbroad)
            </div>
            <div class=" col-md-12">
                @Html.LabelFor(model => model.TotalShipInternal)
                @Html.TextBoxFor(model => model.TotalShipInternal, new {@class = "col-xs-12 money"})
                @Html.ValidationMessageFor(model => model.TotalShipInternal)
            </div>
            <div class=" col-md-12">
                @Html.LabelFor(model => model.TotalVat)
                @Html.TextBoxFor(model => model.TotalVat, new {@class = "col-xs-12 percent"})
                @Html.ValidationMessageFor(model => model.TotalVat)
            </div>
            <div class=" col-md-12">
                @Html.LabelFor(model => model.TotalWage)
                @Html.TextBoxFor(model => model.TotalWage, new {@class = "col-xs-12 percent"})
                @Html.ValidationMessageFor(model => model.TotalWage)
            </div>
            <div class=" col-md-12">
                @Html.LabelFor(model => model.NoteApproved)
                @Html.TextAreaFor(model => model.TotalDomesticCharges, new {@class = "col-xs-12 ", rows = "3"})
                @Html.ValidationMessageFor(model => model.TotalDomesticCharges)
            </div>
      

        </div>

          <div class="modal-footer  margin-top-10">
                <button type="button" class="btn btn-white dimdiss" data-dimdiss="modal">@Misuka.Web.Resources.Common.Close</button>
                <button type="submit" class="btn btn-primary">@Misuka.Web.Resources.Common.Save</button>
           
        </div>
    }
  </div>
<script type="text/javascript">
    $(document).ready(function () {
        OrderClient.LoadMonney();
        OrderClient.HidePermission();

    });
</script>