@using Misuka.Infrastructure.MVC
@model Misuka.Web.Models.WebSiteLinkModel
@{
    ViewBag.Title = this.LocalResources("PageTitle");
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


@using (Ajax.BeginForm("Edit", "WebSiteLink", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    OnBegin = "defaultResponse.beginHandler",
    OnSuccess = "WebSiteLinkClient.OnSuccessed",
    OnFailure = "WebSiteLinkClient.OnFailed",

}, "errorPanel", new { id = "WebSiteLinkInformationForm" }))
{
  
            <div class="row">
                <div class=" col-xs-12 col-sm-3">
                    <div class="info-panel">
                    </div>
                </div>
            </div>
            <div class="row">
                @Html.HiddenFor(model => model.WebSiteLinkId)
               <div class=" col-xs-12 col-sm-3">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "col-xs-12 ",@autofocus =""  })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                <div class=" col-xs-12 col-sm-3">
                  @Html.LabelFor(model => model.ImageUrl)
                  @Html.TextBoxFor(model => model.ImageUrl, new { @class = "col-xs-12 " })
                  @Html.ValidationMessageFor(model => model.ImageUrl)
                </div>
                 <div class=" col-xs-12 col-sm-3">
                  @Html.LabelFor(model => model.Link)
                  @Html.TextBoxFor(model => model.Link, new { @class = "col-xs-12" })
                  @Html.ValidationMessageFor(model => model.Link)
                </div>
            </div>

  <div class="row padding-top-10">
    <div class=" col-xs-12">
      <button class="btn btn-primary btn-sm pull-left " type="submit">@Misuka.Web.Resources.Common.Save</button>

      <a class="btn btn-primary btn-sm pull-left" onclick="WebSiteLinkClient.OnBack()">@Misuka.Web.Resources.Common.BackTo</a>
    </div>
    </div>
}

@section Scripts
{
  <script src="@Url.Content("~/Scripts/pages/WebSiteLink/websitelink.js")" type="text/javascript"></script>
}